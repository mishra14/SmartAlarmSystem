<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.cis542.upenn.edu.alertreceiver" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="AlertReceiver"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartApp"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectApp"
            android:screenOrientation="portrait" />

        <service
            android:name=".HandleJSON"
            android:enabled="true" />
        <activity
            android:name=".MainActivitySensor"
            android:label="@string/title_activity_main_activity_sensor" >
        </activity>
        <service android:name=".SensorService" />

    </application>

</manifest>
